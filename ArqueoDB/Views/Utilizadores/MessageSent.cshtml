@model ArqueoDB.Models.Utilizador
@using ArqueoDB.Models

@{
    ViewBag.Title = "Message";
    Layout = "~/Views/Shared/_LayoutArqueodb.cshtml";
    Utilizador user = ((Utilizador)(Session["Utilizador"]));
    Mensagem m = ViewBag.msg;


}
@section breadcrumb {

        <div class="breadcrumb-button">
          <span class="breadcrumb-label">
          <i class="icon-envelope"></i> Caixa de entrada </span>
          <span class="breadcrumb-arrow"><span></span></span>
        </div>
            <div class="breadcrumb-button">
          <span class="breadcrumb-label">
          <i class="icon-comment"></i> Mensagem "@m.Assunto" </span>
          <span class="breadcrumb-arrow"><span></span></span>
        </div>
 }


    <div class="row-fluid" style="margin-top:30px;">
      <div class="span3">
        <div class="box">
          <div class="box-header">
            <span class="title"><i class="icon-cog"></i> Opçoes da caixa de entrada</span>
          </div>
          <div class="box-content">
            <div class="action-nav-normal">
              <div class="row-fluid padded">
                <div class="span11 action-nav-button">
                  <a href="~/Utilizadores/DeleteMsgE/@Model.UtilizadorID?msgid=@m.MensagemID" >
                  <i class="icon-trash"></i>
                  <span>Apagar mensagem</span>
                  </a>
                  <span class="triangle-button red"><i class="icon-plus"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="span9">
        <div class="box">
          <div class="box-header">
           <span class="title">"@m.Assunto" enviado para <a href="~/Utilizadores/Details/@m.ReceptorID">@m.Receptor.Nome </a></span>

          </div>
          <div class="box-content padded">
           <div class="row-fluid"> @m.Corpo </div>

          </div>
        </div>
      </div>
    </div>
