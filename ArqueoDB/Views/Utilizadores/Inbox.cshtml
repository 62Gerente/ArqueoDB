@model ArqueoDB.Models.Utilizador
@using ArqueoDB.Models

@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_LayoutArqueodb.cshtml";
    Utilizador user = ((Utilizador)(Session["Utilizador"]));
    List<Utilizador> lista = ViewBag.listausers;


}
@section breadcrumb {

        <div class="breadcrumb-button">
          <span class="breadcrumb-label">
          <i class="icon-envelope"></i> Caixa de entrada </span>
          <span class="breadcrumb-arrow"><span></span></span>
        </div>
 }


    <div class="row-fluid" style="margin-top:30px;">
      <div class="span3">
        <div class="box">
          <div class="box-header">
            <span class="title"><i class="icon-cog"></i> Opçoes da caixa de entrada</span>
          </div>
          <div class="box-content">
            <div class="action-nav-normal">
              <div class="row-fluid padded">
                <div class="span11 action-nav-button">
                  <a data-toggle="modal" href="general.html#modal-form">
                  <i class="icon-envelope-alt"></i>
                  <span>Nova mensagem</span>
                  </a>
                  <span class="triangle-button green"><i class="icon-plus"></i></span>
                </div>
              </div>
              <div class="row-fluid padded">
                <div class="span11 action-nav-button">
                  <a href="#" title="New Project">
                  <i class=" icon-check"></i>
                  <span>Marcar tudo como lido</span>
                  </a>
                  <span class="triangle-button blue"><i class="icon-plus"></i></span>
                </div>
              </div>
              <div class="row-fluid padded">
                <div class="span11 action-nav-button">
                  <a href="#" title="New Project">
                  <i class="icon-trash"></i>
                  <span>Apagar todas</span>
                  </a>
                  <span class="triangle-button red"><i class="icon-plus"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="span9">
        <div class="box">
          <div class="box-content">
            <!-- find me in partials/data_tables_custom -->
            <div id="dataTables">
              <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
              <thead>
              <tr>
                <th style="width: 40%;">
                  <div>
                    Assunto
                  </div>
                </th>
                <th style="width: 20%;">
                  <div>
                    Enviado por
                  </div>
                </th>
                <th style="width: 15%;">
                  <div>
                    Enviado em
                  </div>
                </th>
                <th style="width: 25%;">
                  <div>
                    Opções
                  </div>
                </th>
              </tr>
              </thead>
              <tbody>
                   @foreach (Mensagem m in Model.MensagensRecebidas.Where(l => !l.ApagadoR)) { 
                <text>
              <tr>
               
                  @if (m.Lida == false) { <td><a href="~/Mensagens/Details/@m.MensagemID"><span style="margin-right: 10px" class="label label-dark-red">nova</span> <b>@m.Assunto</b></a></td> } else{<td><a href="~/Mensagens/Details/@m.MensagemID"> @m.Assunto</a></td>}
                  <td>@m.Emissor.Nome </td>
                  <td>@m.DataEnvio</td>
                  <td></td>
                  
               
              </tr></text> }
              </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
<div id="modal-form" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h6 id="modal-formLabel">Nova Mensagem</h6>
  </div><form class="form-horizontal fill-up separate-sections" method="post">
  <div class="modal-body">
    
  

      <div class="divider"><span></span></div>

      <div class="row-fluid">
        <div class="span12">
          <label>Enviar para:</label>
          <select class="chzn-select" name="recept">
              @foreach (Utilizador usr in lista) { 
                <text><option value="@usr.UtilizadorID">@usr.Nome</option></text>
              }
</select>
        </div>

      </div>

      <div class="divider"><span></span></div>
        <label>Assunto</label><div>
        <input type="text" name="assunto" /></div><br/>
      <div>
        <textarea rows="4" name="corpo" placeholder="Escreva aqui a sua  mensagem..."></textarea>
      </div>

       </div>
  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal">Cancelar</button>
    <button type="submit" class="btn btn-blue">Enviar</button>
  </div>
    </form>

 
</div>