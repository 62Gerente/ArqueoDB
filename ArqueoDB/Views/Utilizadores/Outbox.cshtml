@model ArqueoDB.Models.Utilizador
@using ArqueoDB.Models

@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_LayoutArqueodb.cshtml";
    Utilizador user = ((Utilizador)(Session["Utilizador"]));
    List<Utilizador> lista = ViewBag.listausers;


}
@section breadcrumb {

        <div class="breadcrumb-button">
          <span class="breadcrumb-label">
          <i class="icon-envelope"></i> Caixa de Saida </span>
          <span class="breadcrumb-arrow"><span></span></span>
        </div>
 }


    <div class="row-fluid" style="margin-top:30px;">
      <div class="span3">
        <div class="box">
          <div class="box-header">
            <span class="title"><i class="icon-cog"></i> Opçoes da caixa de entrada</span>
          </div>
          <div class="box-content">
            <div class="action-nav-normal">
              <div class="row-fluid padded">
                <div class="span11 action-nav-button">
                  <a href="~/Utilizadores/DeleteAllMsgE/@Model.UtilizadorID" >
                  <i class="icon-trash"></i>
                  <span>Apagar todas</span>
                  </a>
                  <span class="triangle-button red"><i class="icon-plus"></i></span>
                </div>
              </div>
                <br/><br/>
              <div class="row-fluid padded">
                <div class="span11 action-nav-button">
                  <a href="~/Utilizadores/Inbox/@Model.UtilizadorID" >
                  <i class="icon-share"></i>
                  <span>Caixa de Entrada</span>
                  </a>
                  <span class="triangle-button red"><i class="icon-plus"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="span9">
        <div class="box">
          <div class="box-content">
            <!-- find me in partials/data_tables_custom -->
            <div id="dataTables">
              <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
              <thead>
              <tr>
                <th style="width: 40%;">
                  <div>
                    Assunto
                  </div>
                </th>
                <th style="width: 20%;">
                  <div>
                    Enviado por
                  </div>
                </th>
                <th style="width: 15%;">
                  <div>
                    Enviado em
                  </div>
                </th>
                <th style="width: 25%;">
                  <div>
                    Opções
                  </div>
                </th>
              </tr>
              </thead>
              <tbody>
                   @foreach (Mensagem m in Model.MensagensEnviadas.Where(l => !l.ApagadoE).Reverse()) { 
                <text>
              <tr>
               
                  <td><a href="~/Utilizadores/MessageSent/@Model.UtilizadorID?msgid=@m.MensagemID"> @m.Assunto</a></td>
                  <td><a href="~/Utilizadores/Details/@m.ReceptorID">@m.Receptor.Nome </a></td>
                  <td>@m.DataEnvio</td>
                  <td><a href="~/Utilizadores/DeleteMsgE/@Model.UtilizadorID?msgid=@m.MensagemID" class="btn btn-mini btn-red" style="width:95%"><i class="icon-remove"></i> Apagar</a></td>
                  
               
              </tr></text> }
              </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
