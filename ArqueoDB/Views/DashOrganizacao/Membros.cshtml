@model ArqueoDB.Models.Organizacao

@{
    ViewBag.Title = "Membros";
    ViewBag.Organizacao = Model;
    int n_membros = 0;
    Layout = "~/Views/Shared/_LayoutOrganizacao.cshtml";    
}
@section breadcrumb {
    <li><a href="/DashOrganizacao/Membros/@Html.DisplayFor(model => model.OrganizacaoID)">Membros</a></li>
}
            <div class="span12" style="margin-bottom:20px">                 
                <div class="pull-right" style="" >  
                        <a class="btn btn-flat btn-inverse pull-right" href="#"><i class="micon-plus"></i>  Adicionar novo membro</a>
                </div>
            </div>
            <section class="content-wrapper main-content clear-fix">
@foreach(var m in Model.Membros){
    					<div class="span6" 
                            @if((n_membros++)%2==0){
                               <text> style="margin-left:0px"; </text>
                            }
                       >
    
					
						<!-- widget -->
						<div class="well widget">
							<!-- widget header -->
							<div class="widget-header">
								<h3 class="title"><a href="#">@m.Utilizador.NomeUtilizador</a></h3> <!-- FALTA HIPERLIGAÇÃO  --> 
								<div class="widget-nav">
									<div class="dropdown nav-item">
										<a href="#" class="dropdown-toggle" data-toggle="dropdown">
											<i class="icon-cog"></i>
										</a>
										<ul class="dropdown-menu pull-right">
											<li>
												<a href="#">Alterar permissões</a> <!-- FALTA HIPERLIGAÇÃO -->
											</li>
                                            <li>
												<a href="#">Remover membro</a> <!-- FALTA HIPERLIGAÇÃO -->
											</li>
										</ul>
									</div>
								</div>
							</div>
							<!-- ./ widget header -->
							
							<!-- widget content -->
							<div class="widget-content" style=" height:100px;">
                                <div class="span4">
                                    <a href="#"> <!-- FALTA HIPERLIGAÇÃO -->
                                        @if(m.Utilizador.ImagemPerfil != null){
                                            <img src="@(m.Utilizador.ImagemPerfil.Directoria.Caminho+m.Utilizador.ImagemPerfil.Nome)" />
                                        }
                                        else{
                                            <!-- Imagem default -->   
                                        }
                                    </a>
                                </div>
                                <div class="span8">
                                    <b>Email:</b> @m.Utilizador.Email<br>
                                    <b>Data de Registo:</b> @m.Utilizador.DataRegisto<br>                                    
                                </div>
                                <div class="span8" style="margin-top:20px">
                                    <a class="btn btn-small btn-inverse t" href="#"><i class="micon-eye"></i> Ver perfil</a> <!-- FALTA HIPERLIGAÇÃO -->
                                    <a class="btn btn-small btn-inverse " href="#"><i class="micon-location"></i> Ver publicações</a> <!-- FALTA HIPERLIGAÇÃO -->
                                   <a class="btn btn-small btn-inverse t" href="#"><i class="micon-pencil-2"></i> Ver locais responsáveis</a> <!-- FALTA HIPERLIGAÇÃO -->
                                </div>
							</div>
							<!-- ./ widget content -->
							
						</div>	

					</div>
    
}

           </section>
